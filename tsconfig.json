{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist/js",
        "sourceMap": true,
        "jsx": "react",
        "lib": ["es2015", "dom", "esnext"],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*",
      "src/*.ts",
      "**/*.test.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
